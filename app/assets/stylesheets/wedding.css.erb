
/* Fonts */
body,
#google_directions table,
input {font-family: 'Quattrocento', serif;}
h1 { font-family: 'Nixie One', monospace; }

/* Font sizes */
h1 {font-size: 32px;}
nav {font-size: 18px;}
h2 {font-size: 22px;}
h3 {font-size: 16px;}
p {font-size: 14px;}
article p.intro {font-size: 1.2em;}
#google_directions span.title {font-size: 14px;}
input {font-size: 1em;}

/* Font weight */
#google_directions span.title {font-weight: bold;}

/* Text spacing */
article {line-height: 1.5em;}

/* Text alignment */
input[type=number] {text-align: center;}

/* Page Layout */
body { padding: 1em;}
.page { max-width: 800px; margin-left: auto; margin-right: auto;}
h2 { margin-bottom: 0.5em; margin-top: 1.5em;}
p {margin: 0 0 1.5em 0;}
#google_directions {width: 308px; float: right; padding: 0 1em;}
article h3 {margin : 0;}

/* Element layout */
nav { display: table; border-collapse: collapse; width: 100%;}
nav a {padding: 10px 12px 10px 35px; margin: 0 0px 0 0; display: table-cell; text-align: center;}

/* Borders */
nav a { border: 1px solid black;}
#google_directions,
figure { border: 2px dashed #BBB; }
abbr { border-bottom: 1px black dotted;}

/* Colours */
#google_directions span.title a,
nav a {color: black;}
nav a:hover {background-color: #EFEFEF;}
a {color: #00C;}
h3 a {color: #00A ;}

/* Text Decoration */
#google_directions a,
article h3 a,
nav a {text-decoration: none;}

/* Background images */
nav a { background-repeat: no-repeat; background-position: 10px 45%;}
nav a.wedding { background-image: url(<%= asset_path 'tent.png' %>); }
nav a.location { background-image: url(<%= asset_path 'sign.png' %>); }
nav a.area { background-image: url(<%= asset_path 'mountain.png' %>); }
nav a.accommodation { background-image: url(<%= asset_path 'bed.png' %>); }
nav a.schedule { background-image: url(<%= asset_path 'clock.png' %>); }


/* Images */
figure {padding: .6em; float: right; max-width: 40%; margin-left: 1em; margin-top: 0;}
figure img {max-width: 100%;}

form div.group_name {text-align: center;}

fieldset {border: 1px solid black; margin-bottom: 1em;}
legend {text-align: left; margin-left: 0; }

fieldset input {margin-right: 2em;}
fieldset input[type=radio] {margin-right: .2em;}
input[type=text] {height: 1.2em; width: 15em; margin-left: 1em;}
input[type=number] {width: 3em; margin-left: .5em;}
input[type=submit] {margin-left: auto; margin-right: auto; display: block; text-align: center; width: 5em; min-width: 5em; }

fieldset.options div {margin-bottom: 1em;}
fieldset.options div div {margin-bottom: 0;}
fieldset.options div div.selector {float: left; width: 10em;}
fieldset.options div div.additional {margin-left: 10em;}

.disabled { border-color: #999;}
.disabled, .disabled input {color: #BBB;}

p.rsvp {text-align: center; }